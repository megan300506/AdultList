// File with all variables styles
@import '_vars.styl'
// ========== ========== G L O B A L   S T Y L E S ========== ==========
*
	padding 0
	margin 0
	box-sizing border-box
	
html
	text-size-adjust none
	
body
	font 16px $Reg
	line-height 1.6
	overflow-x hidden
	min-width 320px
	height 100%
	opacity 1
	position relative
	color $text-color
	background url('../img/pink-dust-bg.png') top left repeat


h1,h2,h3,h4,h5,h6,ul,li
	margin 0
	padding 0

input,
textarea
	outline none
	background transparent
	border none
	transition all .23s ease-in-out

a
	text-decoration none
	outline none
	transition all .23s ease-in-out
	&:hover
		text-decoration none
		
button
	box-shadow none
	border none
	outline none
	cursor pointer
	transition all .23s ease-in-out
	background transparent

img
	width 100%
	height auto
// ========== ========== ========== ========== ========== ==========

// ========== ========== M A I N   S T Y L E S ========== ==========
	
.clearfix:before,
.clearfix:after,
.container:before,
.container:after,
.container-fluid:before,
.container-fluid:after,
.row:before,
.row:after
	content " "
	display table

.clearfix:after,
.container:after,
.container-fluid:after,
.row:after
	clear both

.left
	float left

.right
	float right

.text-center
	text-align center
.text-left
	text-align left
.text-right
	text-align right


.container
	position relative
	z-index 2
	
.box 
	padding 35px 0
	
.w3c
	visibility hidden
	display none
	

