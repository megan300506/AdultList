@import '_vars.styl'

// ========== ========== V A R I A B L E S ========== ==========
$mwidth = 300px
// ========== ========== ========== ========== ==========

.btn
	display inline-block
	width 100%
	max-width $mwidth
	padding 15px 0
	font 1em $Reg
	color $light-color
	border 2px solid transparent
	transition all .23s ease-in-out
	&__accent
		background $accent-color
	&__shadow
		background transparent
	&__dark
		background $dark-color
		